{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./apps/root-config",
    "strict": true,
    "paths": {}
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
